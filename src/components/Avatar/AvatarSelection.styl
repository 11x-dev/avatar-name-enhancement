.AvatarSelection {
    flex: 1;

    display: inline-flex;
    flex-direction: column;
    align-items: stretch;
    align-content: stretch;
    justify-content: center;
    margin-top: 1rem;


    .selector {
        display: inline-flex;
        justify-content: stretch;
        margin-top: 1rem;

        .previous, .next {
            flex: 1;
            background-color: red;
            display: inline-flex;
            align-items: center;
            padding: 0.5rem;
            background-color: rgba(255,255,255,0.2);
            &:hover {
                cursor: pointer;
                background-color: rgba(255,255,255,0.3);
            }
        }

    }
}
