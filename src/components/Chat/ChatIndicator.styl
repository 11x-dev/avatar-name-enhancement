.ChatIndicator {
    display: inline-flex;
    flex-direction: column;
    padding-right: 0.5rem;
    padding-left: 0.5rem;
    align-items: center;
    margin-bottom: -3px;
    margin-top: 1px;
    cursor: pointer;

    .fa-comment {
        themed color shade3;
        font-size: 0.9rem;
    }
    .count {
        font-size: font-size-smaller;
        padding-bottom: -5px;
    }

    &.mentioned .fa-comment {
        themed color chat-mentions;
    }
    &.mentioned .count {
        themed color chat-mentions;
    }

    &.unread .fa-comment {
        themed color primary;
    }
    &.unread .count {
        themed color primary;
    }

}
