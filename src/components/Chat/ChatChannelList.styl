.ChatChannelList {
    .channel {
        padding-left: 0.2rem;
        display: flex;
        justify-content: space-between;

        &.active {
            themed background-color primary
            themed color colored-background-fg
        }
        &:hover {
            themed-desaturate background-color primary 80%
            themed color colored-background-fg
        }
        &.unjoined {
            themed color shade2
        }
        &.unread {
            themed color primary
        }
        &.mentioned {
            themed color chat-mentions
        }

        .channel-name {
            display: inline-flex;
            align-items: center;
            flex: 1;
            cursor: pointer;
            white-space: nowrap;
            font-size: font-size-mid;
            justify-content: stretch;
            padding-right: 0.2rem;

            i, img, .flag {
                flex: 0;
                display: inline-block;
                height: 16px;
                width: 16px;
                margin-right: 0.3rem;
                margin-left: 0.1rem;
            }

            .name {
                display: inline-block;
                flex: 1;
                flex-basis: 5rem;
                width: 5rem;
                overflow: hidden;
            }

            .unread-count {
                flex-shrink: 0;
                @extend .monospace
                font-size: 0.8rem;
                font-style: normal !important;
                float: right;
                padding-left: 0.5rem;
                padding-top: 0.10rem;

                &:before {
                    content: attr(data-count);
                }
            }
        }

    }

    button {
        font-size: font-size-smaller;
        margin: 1rem;
        height: 2rem;
    }

    .joinable {
        margin-top: 1rem;
        border-top: 1px solid transparent;
        themed border-top-color shade3
    }
}
