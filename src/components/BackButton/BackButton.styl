.BackButton {
    @extend .stone-button
    @extend .x-light;
    display: inline-block;
    background-repeat: no-repeat;
    background-position: center;
    background-size: contain;
    width: 2rem;
    height: 2rem;
    position: fixed;
    left: 1rem;
    top: 1rem;
    cursor: pointer;
    z-index: z.back-button;

    &:hover {
        @extend .x-light-green;
    }
    &:active {
        @extend .x-dark-green;
    }
}
