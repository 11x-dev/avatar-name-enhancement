/*
* The majority of the styling for the Puzzles.tsx component is still in the Lesson.styl file, since the large majority of the styling should still match what the lessons look like
*/

.puzzle-sections {
    margin-left: 2rem;
    margin-top: -1.6rem;
}

.section-link {
    cursor: pointer;
    margin-bottom: 1rem;
    background: rgb(208,238,249);
    color: black;
    border: none;
    padding: 10px;
    margin-right: 2rem;
    border-radius: 6px;
    font-size: 20px;
    text-shadow: none;
    
    &:hover {
        opacity: 0.85;
    }
}

.active-section {
    color: rgb(46, 165, 250);
}

.puzzle-center {
    flex: 1;
    text-align: center;
    color: #fff;
    font-weight: bold;
    font-size: 1.7rem;
    overflow: hidden;
}

#portrait-hint {
    position: absolute;
    right: 3.8rem;
    top: 1rem;
    cursor: pointer;
    
    +landscape() {
        display: none;
    }

    .hint-icon {
        width: 3rem;
        height: 3rem;
        background-image: svg-load("../assets/1.0/buttons/lightbulb-hint-icon.svg");
    }
}