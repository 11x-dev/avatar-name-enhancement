.HelpPage
  display flex
  min-height 100vh
  font-family 'Baloo 2', sans-serif
  background #fdf8f3

.HelpNav
  width 220px
  background #fceccf
  padding 20px
  border-right 1px solid #e0d3b8
  flex-shrink 0
  box-shadow 2px 0 5px rgba(0, 0, 0, 0.05)
  border-radius 0 8px 8px 0

.HelpNav h2
  font-size 18px
  margin-bottom 10px
  color #594400

.HelpNav ul
  list-style none
  padding 0

.HelpNav li
  margin-bottom 10px

.HelpNav li button
  background #fff8e6
  border none
  width 100%
  padding 10px
  text-align left
  border-radius 6px
  font-size 16px
  cursor pointer
  transition all 0.2s
  color #594400

.HelpNav li button:hover
  background #ffe8b3
  transform translateX(4px)

.HelpContent
  flex 1
  padding 30px
  max-width 800px

.HelpContent section
  margin-bottom 50px

.HelpContent h2
  font-size 24px
  margin-bottom 10px
  color #333

.HelpContent p
  font-size 16px
  line-height 1.6
  color #444
